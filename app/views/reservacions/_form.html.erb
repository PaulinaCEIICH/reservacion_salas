    <%= form.label :hora_de_inicio %>
    <%= form.time_select :horainicio, id: :reservacion_horainicio %>
  </div>

  <div class="field">
    <%= form.label :hora_de_fin %>
    <%= form.time_select :horafin, id: :reservacion_horafin %>
